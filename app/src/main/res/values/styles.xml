<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="HeadingTitle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/raleway_700_bold</item>
    </style>

    <style name="BtnBg">
        <item name="android:background">@drawable/button_bg</item>
        <item name="hintTextColor">@color/mildblack</item>
        <item name="backgroundColor">@color/mildblack</item>
        <item name="fontFamily">@font/raleway_700_bold</item>
    </style>

    <style name="BtnPassword">
        <item name="android:background">@drawable/button_bg</item>
        <item name="hintTextColor">@color/mildblack</item>
        <item name="android:src">@drawable/pass_hide_unhide_photo</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="BtnSubmit">
        <item name="android:background">@drawable/button_bg</item>
        <item name="color">@color/blue</item>
        <item name="fontFamily">@font/raleway_700_bold</item>
        <item name="backgroundColor">@color/blue</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nunitosans_10pt_black</item>
    </style>

    <style name="pictureBorder">
        <item name="android:background">@drawable/pictureborder</item>
        <item name="android:src">@drawable/artist_2_1</item>
    </style>

    <style name="textBg">
        <item name="android:background">@drawable/text_bg</item>
        <item name="backgroundColor">@color/midgrey</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/raleway_500_medium</item>
    </style>
    
</resources>