<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bubbles_password_screen_img"
            android:layout_marginStart="-34dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/passAccProfilePic"
            android:layout_marginTop="156dp"
            android:layout_centerHorizontal="true"
            style="@style/pictureBorder"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passAccFrstTxt"
            android:text="Hello, Romina!!"
            style="@style/HeadingTitle"
            android:layout_below="@id/passAccProfilePic"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passAccScndTxt"
            android:layout_below="@id/passAccFrstTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Type your Password"
            android:textSize="16sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/passAccScndTxt"
            android:layout_centerHorizontal="true"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/passAccPassword"
                android:hint="Password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PassAccNotYouText"
            android:text="Not you?"
            android:layout_below="@id/passAccScndTxt"
            android:layout_marginTop="270dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />

<androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passAccNextBtn"
            android:src="@drawable/nxtbutton"
            android:layout_toEndOf="@id/PassAccNotYouText"
            android:layout_marginTop="270dp"
            android:layout_below="@id/passAccScndTxt"
            android:layout_marginStart="10dp"
    />

    </RelativeLayout>
</ScrollView>